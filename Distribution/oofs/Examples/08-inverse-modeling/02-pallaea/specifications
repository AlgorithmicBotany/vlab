		funcedit lturn.func
	lbend:
		funcedit lbend.func

colormap:
	loadmaps:
		loadmap plant.map ; loadmap -c2 plant.map2
	savemaps:
		savemap plant.map ; savemap -c2 plant.map2
	PALETTE


material:
	medit plant.mat

L-system:
	panel:
		display:
			panel panel.l | awkped plant.l
		CHAR panel.l
	CHAR plant.l

view file:
	panel:
		display:
			panel panel.v | ped plant.v
		CHAR panel.v
	CHAR plant.v

animate file:
	panel:
		display:
			panel panel.a | ped plant.a
		CHAR panel.a
	CHAR plant.a

leaf_contour:
	cuspy:
		cuspy leaf.con
	EDIT leaf.con


description:
	EDIT description.txt
