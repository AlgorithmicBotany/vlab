image:
	generate:
		cpfg -w 240 320 -M plant.mat plant.l plant.v plant.a

	off_screen:
		cpfg -g -sb -w 800 1600 -rgb plant.rgb -M plant.mat plant.l plant.v plant.a
functions:
	width:
		funcedit width.func
	density:
		funcedit density.func
	asym:
		funcedit asym.func
	turn:
		funcedit turn.func
	bend:
		funcedit bend.func
	torque:
		funcedit torque.func
	br_angle:
		funcedit bang.func
	leaflet_width:
		funcedit leaflet_width.func
	stem_width:
		funcedit stem_width.func
	length_scale:
		funcedit lenscale.func
	color:
		funcedit color.func

leaf_functions:
	lwidth:
		funcedit lwidth.func
	ldensity:
		funcedit ldensity.func
