*
image:
	generate:
		cpfg -w 240 320 -M plant.mat plant.l plant.v plant.a

	off_screen:
		cpfg -g -sb -w 450 1600 -rgb plant.rgb -M plant.mat plant.l plant.v plant.a
functions:
	of_stem_position:
		width:
			funcedit width.func
		density:
			funcedit density.func
		turn:
			funcedit turn.func
		bend:
			funcedit bend.func
		torque:
			funcedit torque.func
		stem_width:
			funcedit stem_width.func
		br_angle:
			funcedit bang.func
		leaflet_width:
			funcedit leaflet_width.func
		color:
			funcedit color.func
	of_midrib_position:
		lwidth:
			funcedit lwidth.func
		ldensity:
			funcedit ldensity.func
		lturn:
			funcedit lturn.func
		lbend:
			funcedit lbend.func
	of_size:
		length_scale:
			funcedit lenscale.func

colormap:
	loadmaps:
		loadmap plant.map ; loadmap -c2 plant.map2
	savemaps:
		savemap plant.map ; savemap -c2 plant.map2
	PALETTE


material:
	medit plant.mat

L-system:
	panel:
		display:
			panel panel.l | awkped plant.l
		CHAR panel.l
	CHAR plant.l

view file:
	panel:
		display:
			panel panel.v | ped plant.v
		CHAR panel.v
	CHAR plant.v

animate file:
	panel:
		display:
			panel panel.a | ped plant.a
		CHAR panel.a
	CHAR plant.a

leaf_contour:
	cuspy:
		cuspy leaf.con
	EDIT leaf.con


description:
	EDIT description.txt
