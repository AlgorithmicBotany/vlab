plant.l
plant.v
plant.a
plant.map
*
plant:
	generate:
		cpfg -m plant.map plant.l plant.v plant.a

colormap:
	loadmap:
		loadmap plant.map; loadmap -c2 plant.map2
	savemap:
		savemap plant.map ; savemap -c2 plant.map2
	PALETTE

L-system:
	panel:
		display:
			panel panel.l | awkped plant.l
		EDIT panel.l
	EDIT plant.l

view:
	EDIT plant.v

animate:
	panel:
		display:
			panel panel.a | ped plant.a
		EDIT panel.a
	EDIT plant.a

surfaces:
	leaf:
		SURFACE leaf.s ise.v 
	petal:
		SURFACE petal.s ise.v 
	stem:
		SURFACE line.s ise.v 

text:
	TEXT plant.text

